@model IList<GetCustomerQueryResult>
@{
    ViewData["Title"] = "Index";
}

<h1>Müşteriler</h1>

@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Müşteri Ad Soyad</th>
        <th>Email</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.NameSurname</td>
            <td>@item.Email</td>
            <td><a href="/Customer/DeleteCustomer/@item.CustomerId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Customer/UpdateCustomer/@item.CustomerId" class="btn btn-info">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Customer/CreateCustomer" class="btn btn-primary">Yeni Müşteri Ekle</a>